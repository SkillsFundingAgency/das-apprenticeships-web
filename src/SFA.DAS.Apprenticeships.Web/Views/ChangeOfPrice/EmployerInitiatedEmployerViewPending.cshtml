@{
}

<div class="govuk-width-container ">


	<a href="javascript:window.history.go(-1);" class="govuk-back-link">Back</a>



	<main class="govuk-main-wrapper govuk-main-wrapper--auto-spacing" id="main-content" role="main">

		<div class="govuk-grid-row">
			<div class="govuk-grid-column-two-thirds">

				<h1 class="govuk-heading-l">View change request</h1>

				<h2 class="govuk-heading-m">Apprenticeship details</h2>
				<dl class="govuk-summary-list govuk-!-margin-bottom-9">
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Request status
						</dt>
						<dd class="govuk-summary-list__value">
							<strong class="govuk-tag govuk-tag--yellow">Pending provider review</strong>
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Name
						</dt>
						<dd class="govuk-summary-list__value">
							George Ford
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Training provider
						</dt>
						<dd class="govuk-summary-list__value">
							EDUC8 TRAINING (ENGLAND) LIMITED
						</dd>
					</div>
				</dl>
				<h2 class="govuk-heading-m">Price changes you've requested</h2>

				<table class="govuk-table">
					<thead class="govuk-table__head">
						<tr class="govuk-table__row">
							<th scope="col" class="govuk-table__header app-custom-class govuk-!-width-one-third">

							</th>
							<th scope="col" class="govuk-table__header app-custom-class">Current</th>
							<th scope="col" class="govuk-table__header app-custom-class govuk-!-width-one-third">
								Requested
							</th>

						</tr>
					</thead>
					<tbody class="govuk-table__body">
						<tr class="govuk-table__row">
							<th scope="row" class="govuk-table__header">Total price</th>
							<td class="govuk-table__cell">£8,500</td>
							<td class="govuk-table__cell">
								£9,500
							</td>
						</tr>
					</tbody>
				</table>

				<dl class="govuk-summary-list govuk-summary-list--no-border">
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Reason for change:
						</dt>
						<dd class="govuk-summary-list__value govuk-!-width-three-quarters">
							The original price was entered incorrectly, this has been confirmed with the training provider.
						</dd>
					</div>
					<div class="govuk-summary-list__row">
						<dt class="govuk-summary-list__key">
							Effective from date:
						</dt>
						<dd class="govuk-summary-list__value govuk-!-width-one-quarter">
							24


							August


							2023
						</dd>

					</div>

				</dl>


				<form method="post" action="/feature/Change-of-circs/cop/employer/action/view-changes">
					<fieldset class="govuk-fieldset">

						<div class="govuk-form-group">
							<fieldset class="govuk-fieldset">
								<legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
									Do you want to cancel this request?
								</legend>

								<div class="govuk-radios" data-module="govuk-radios">

									<div class="govuk-radios__item">
										<input class="govuk-radios__input" id="withdraw" name="withdraw" type="radio" value="yes" aria-controls="conditional-withdraw" aria-expanded="false">
										<label class="govuk-label govuk-radios__label" for="withdraw">
											Yes, cancel the request
										</label>
									</div>
									<div class="govuk-radios__conditional govuk-radios__conditional--hidden" id="conditional-withdraw">
										<div class="govuk-form-group">
											<label class="govuk-label" for="withdraw-more-details">
												Why do you want to cancel this request?
											</label>
											<textarea class="govuk-textarea" id="withdraw-more-details" name="withdraw-more-details" rows="5"></textarea>
										</div>
									</div>

									<div class="govuk-radios__item">
										<input class="govuk-radios__input" id="withdraw" name="withdraw" type="radio" value="no">
										<label class="govuk-label govuk-radios__label" for="withdraw">
											No, keep the request
										</label>
									</div>

								</div>
							</fieldset>
						</div>
						<button class="govuk-button" type="submit" data-module="govuk-button">
							Continue
						</button>
					</fieldset>
				</form>
			</div>
		</div>



	</main>
</div>