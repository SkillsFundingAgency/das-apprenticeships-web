@model IChangeOfPriceModel

<div class="govuk-form-group">
    <br>
    <fieldset class="govuk-fieldset" role="group" aria-describedby="apprenticeship-price-valid-from-hint">
        <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
            What date is this effective from?
        </legend>
        <div id="apprenticeship-price-valid-from-hint" class="govuk-hint">
            For example, 05 12 2022
            <br>
            The date you enter must be after the training start date
        </div>
        <div class="govuk-date-input" id="apprenticeship-price-valid-from" name="apprenticeship-price-valid-from">
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    @Html.LabelFor(m=>m.EffectiveFromDate.Day, new { @class = $"govuk-label govuk-date-input__label" })
                    @Html.TextBoxFor(m => m.EffectiveFromDate.Day, new { @class = $"govuk-input govuk-date-input__input govuk-input--width-2", @type = "text", @inputmode = "numeric", aria_describedby="apprenticeship-price-valid-from-hint" })
                </div>
            </div>
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    @Html.LabelFor(m=>m.EffectiveFromDate.Month, new { @class = $"govuk-label govuk-date-input__label" })
                    @Html.TextBoxFor(m => m.EffectiveFromDate.Month, new { @class = $"govuk-input govuk-date-input__input govuk-input--width-2", @type = "text", @inputmode = "numeric"})
                </div>
            </div>
            <div class="govuk-date-input__item">
                <div class="govuk-form-group">
                    @Html.LabelFor(m=>m.EffectiveFromDate.Year, new { @class = $"govuk-label govuk-date-input__label" })
                    @Html.TextBoxFor(m => m.EffectiveFromDate.Year, new { @class = $"govuk-input govuk-date-input__input govuk-input--width-2", @type = "text", @inputmode = "numeric"})
                </div>
            </div>
        </div>
    </fieldset>
</div>